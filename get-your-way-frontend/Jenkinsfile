pipeline {
    agent any
    environment {
        CI = true
    }
    stages {
        // stage('export path for npm') {
        //     steps {
        //         sh 'export PATH="$(npm bin -g):$PATH"'
        //     }
        // }
        stage('Install dependencies') {
            steps {
                dir('get-your-way-frontend') {
                    sh 'npm install'
                }
            }
        }
        stage('Audit fix') {
            steps {
                dir('get-your-way-frontend') {
                    sh 'npm audit fix'
                }
            }
        }
        stage('Build application') {
            steps {
                dir('get-your-way-frontend') {
                    sh 'npm run build'
                }
            }
        }
        stage('Serving') {
            steps {
                dir('get-your-way-frontend') {
                    sh """
                    npm install -g serve
                    serve -s build
                    """
                }
            }
        }

    }
}